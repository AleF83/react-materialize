{
  "presets": [
    "react",
    ["env", {
      "targets": {
        "browsers": ["last 2 versions", "safari >= 7"]
      }
    }]
  ],
  "plugins": [],
  "env": {
    "testing": {
      "plugins": [
        "react-hot-loader/babel",
        "rewire",
        ["transform-es2015-modules-commonjs", {
          "loose": true
        }],
        ["module-resolver", {
          "root": ["./src/"],
          "alias": {
            "src": "./src"
          }
        }],
        ["webpack-alias", {
          "config": "./webpack/webpack.config.standalone.js"
        }]
      ]
    }
  }
}
